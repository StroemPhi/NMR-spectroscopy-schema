      "NmrSpecRecord": {
         "additionalProperties": false,
         "description": "This is the tree root node of the schema. It is a data item that serves as a container for all relevant information about *one* NMR spectroscopy assay record. The properties of this class represent the required metadata of an NMR assay, such as:  * what kind of assay was performed (e.g. 2D 13C COSY) and what devices where used for that (e.g. spectrometer, magnet, solvent, buffer, ...) * what are the detail infos of the assayed sample (name, formula, structure, concentration, preperation process, ...)",
         "properties": {
            "created_by": {
               "description": "the creator of the ressource",
               "type": "string"
            },
            "date_created": {
               "description": "The date on which the source file was processed according to this schema.",
               "format": "date-time",
               "type": "string"
            },
            "description": {
               "type": "string"
            },
            "id": {
               "description": "the URI of a NMR spectroscopy record, which gets generated upon ingest source data",
               "type": "string"
            },
            "licence_str": {
               "description": "the licence of the ingested raw data as string",
               "type": "string"
            },
            "licence_url": {
               "description": "the licence of the ingested raw data in machine readable format as URL",
               "type": "string"
            },
            "name": {
               "description": "a generic property to provide a string that is used to name a something",
               "type": "string"
            },
            "output_of_nmr_assay": {
               "$ref": "#/$defs/PulsedNmrAssay"
            },
            "source": {
               "description": "This property is used to describe the source of the data as string (e.g. \"Chemotion Repository\").",
               "items": {
                  "type": "string"
               },
               "type": "array"
            },
            "source_uri": {
               "description": "This property can be used to provide the URL or CURIE of the the source file, if it has one.",
               "type": "string"
            }
         },
         "required": [
            "output_of_nmr_assay",
            "id",
            "source"
         ],
         "title": "NmrSpecRecord",
         "type": "object"
      },
      "NmrSpecRecordCollection": {
         "additionalProperties": false,
         "description": "This class represents a collection of NMR spectroscopy records. It is to be used when multiple NMR assays were made in order to analyse a given sample.",
         "properties": {
            "assays_sample": {
               "$ref": "#/$defs/NmrSample",
               "description": "This property is used to provide metadata on the assayed NMR sample."
            },
            "created_by": {
               "description": "the creator of the ressource",
